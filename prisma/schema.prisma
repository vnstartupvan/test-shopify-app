// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model QRCode {
  id               Int      @id @default(autoincrement())
  title            String
  shop             String
  productId        String
  productHandle    String
  productVariantId String
  destination      String
  scans            Int      @default(0)
  createdAt        DateTime @default(now())
}

model Popup {
    id             Int      @id @default(autoincrement())
    title          String
    imageURL       String 
    description    String
    shop           String
    createdAt        DateTime @default(now())
}

model PopupConfig {
    id             Int      @id @default(autoincrement())
    Interval       Boolean
    TimeOut        Int @default(0)
    shop           String
    createdAt      DateTime @default(now())
}

model PopupPage {
    id             Int      @id @default(autoincrement())
    page           String
    createdAt      DateTime @default(now())
    shop           String
}

model PopupConditionConfig {
    displayAllProductPage        Boolean
    displayAllCollectionPage     Boolean
    displayOnSpecificProductPages    Boolean 
    displayOnSpecificCollectionPages Boolean
    displayOnSpecificURLPages             Boolean
    shop                         String @unique @id
    createdAt                    DateTime @default(now())
}